!!! 5
html
  head
    link(href="css/styles.css", rel="stylesheet")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Faraway Kingdom
  body
    a(name="#video")
    nav.nav-wrap
      ul.nav-main
        li#mobile-toggle: a(href="#")
        li.active.desktop-link
          a(href="#video")
            i.home  Video Trailer
        li.desktop-link: a(href="#features") Game Features
        li.desktop-link: a(href="#screenshots") Screenshots
        li.last
          a.sns-link.facebook(href="http://facebook.com") Facebook
          a.sns-link.twitter(href="http://twitter.com") Twitter
          a.sns-link.reddit(href="http://reddit.com") Reddit
      ul.nav-mobile
        li: a(href="#video") Video Trailer
        li: a(href="#features") Game Features
        li: a(href="#screenshots") Screenshots

    .top-wrap
      .angel
      header.section-hero
        h1.logo-main: a(href="#") Faraway Kingdom
        section.section-signup
          .warrior
          .btn-close
          .pre-signup
            h2 Become the King of Faraway Kingdom!
            p Tell me when Faraway Kingdom becomes available in the App Store.
            .input-wrap
              input.text-input(type="text", placeholder="Enter your email")
              button#submit-main.btn-submit Keep in touch
              .input-error.hide Please enter a valid email
          .post-signup(style="display:none")
            h2 Welcome to Faraway Kingdom!
            p We'll send you a message when Faraway Kingdom is ready to download!
            button.btn-watch-video Watch Video
        section.section-video
          .embed-container
            iframe(src="http://www.youtube.com/embed/Ev0wjCM_1DE",frameborder="0",allowfullscreen)
      section.section-signup-secondary
        .secondary-signup
          .secondary-pre-signup
            p Tell me when Faraway Kingdom becomes available in the App Store!
            .input-wrap
              input.text-input(type="text", placeholder="Enter your email")
              button#submit-secondary.btn-submit Keep in touch
              .input-error.hide Please enter a valid email
          .secondary-post-signup(style="display:none")
            h2 Welcome to Faraway Kingdom!
            p We'll send you a message when Faraway Kingdom is ready to download!

    .content-wrap
      a(name="#features")
      section#nav-features.section-info
        ul.feature-list
          li.feature-item
            img.feature-image(src="img/feature-img-1.gif", alt="Feature Image")
            .feature-text
              h3 Unlock new dungeons
              p and explore the deep undergrounds of your kingdom.
          li.feature-item
            img.feature-image(src="img/feature-img-2.gif", alt="Feature Image")
            .feature-text
              h3 Send your heroes to battle
              p where they will train and collect treasures
          li.feature-item.last
            img.feature-image(src="img/feature-img-3.png", alt="Feature Image")
            .feature-text
              h3 Gather your bravest heroes
              p and raid powerful monsters for even better loots.
      a(name="#screenshots")
      section#nav-screenshots.section-slideshow
        ul.slideshow-list
          li.slideshow-item.first
            a(href="img/screenshot-1.jpg", class="slideshow-link")
              .thumb-overlay
              img(src="img/screenshot-1.jpg")
          li.slideshow-item
            a(href="img/screenshot-2.jpg", class="slideshow-link")
              .thumb-overlay
              img(src="img/screenshot-2.jpg")
          li.slideshow-item
            a(href="img/screenshot-3.jpg", class="slideshow-link")
              .thumb-overlay
              img(src="img/screenshot-3.jpg")
          li.slideshow-item
            a(href="img/screenshot-4.jpg", class="slideshow-link")
              .thumb-overlay
              img(src="img/screenshot-4.jpg")

    footer.footer-wrap
      .footer Copyright &copy; SG North. All rights reserved. SG North and Faraway Kingdom are registered trademarks.


    script(src="http://code.jquery.com/jquery-2.0.3.min.js")
    script(src="js/jquery-ui-1.10.4.custom.min.js")
    script(src="js/jquery.colorbox-min.js")
    script(src="js/scripts.js")